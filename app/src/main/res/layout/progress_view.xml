<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/progress_dialog_background_color"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="@dimen/dp15"
    android:minHeight="120dp"
    android:minWidth="120dp"
    android:layout_height="wrap_content">


    <ProgressBar
        android:id="@+id/progressBar"
        android:background="#f1eef2f4"
        style="?android:attr/progressBarStyle"
        android:indeterminateDrawable="@drawable/progress_dialog_circle_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:background="#f1eef2f4"
        android:layout_marginTop="@dimen/dp3"
        android:id="@+id/dialog_tvShow"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp15"
        android:lines="1"
        android:maxLength="20"
        android:textColor="@color/appthemeColor"
        android:text="@string/string_loading"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
</LinearLayout>